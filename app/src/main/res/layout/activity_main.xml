<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="#000000"
     android:orientation="horizontal">

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="300dp"
         android:visibility="gone"
         android:background="#333333"
         android:id="@+id/liner">

        <FrameLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent">

            <ScrollView
                 android:layout_height="500dp"
                 android:layout_width="match_parent"
                 android:background="#000000"
                 android:layout_margin="10dp">

                <TextView
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:textColor="@color/langit"
                     android:id="@+id/hasil" />

            </ScrollView>

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginBottom="100dp"
                 android:text="Bersih"
                 android:layout_gravity="bottom"
                 android:id="@+id/clear" />

            <LinearLayout
                 android:layout_height="60dp"
                 android:layout_width="match_parent"
                 android:layout_marginBottom="20dp"
                 android:gravity="center"
                 android:background="#000000"
                 android:orientation="horizontal"
                 android:layout_gravity="bottom">

                <EditText
                     android:layout_height="50dp"
                     android:layout_width="200dp"
                     android:layout_marginEnd="15dp"
                     android:background="#000000"
                     android:hint="Masukan Perintah"
                     android:textColor="#ffffff"
                     android:id="@+id/perintah" />

                <TextView
                     android:layout_height="50dp"
                     android:layout_width="50dp"
                     android:gravity="center"
                     android:background="#affaff"
                     android:textColor="#000000"
                     android:text="Run"
                     android:id="@+id/mulai" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:orientation="vertical">

        <LinearLayout
             android:layout_height="60dp"
             android:layout_width="match_parent"
             android:gravity="center_vertical"
             android:background="#777777"
             android:orientation="horizontal">

            <ImageView
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:layout_marginEnd="50dp"
                 android:src="@drawable/nav"
                 android:id="@+id/terminal" />

            <ImageView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:src="@drawable/file_baru"
                 android:layout_marginEnd="20dp"
                 android:id="@+id/fileBaru" />

            <ImageView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:src="@drawable/folder_baru"
                 android:layout_marginEnd="20dp"
                 android:id="@+id/folderBaru" />

            <ImageView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:src="@drawable/tf_file"
                 android:layout_marginEnd="20dp"
                 android:id="@+id/memoFile" />

            <ImageView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:src="@drawable/tf_folder"
                 android:layout_marginEnd="20dp"
                 android:id="@+id/memoFolder" />

            <ImageView
                 android:layout_height="30dp"
                 android:layout_width="30dp"
                 android:visibility="gone"
                 android:src="@drawable/kembali"
                 android:id="@+id/kembali" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="50dp"
             android:layout_width="match_parent"
             android:visibility="gone"
             android:gravity="center"
             android:background="#333333"
             android:layout_margin="10dp"
             android:orientation="horizontal"
             android:id="@+id/tekanLama">

            <ImageView
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:layout_marginEnd="20dp"
                 android:src="@drawable/salin"
                 android:id="@+id/salin" />

            <ImageView
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:layout_marginEnd="20dp"
                 android:src="@drawable/potong"
                 android:id="@+id/potong" />

            <ImageView
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:src="@drawable/hapus"
                 android:layout_marginEnd="20dp"
                 android:id="@+id/hapus" />

            <ImageView
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:layout_marginEnd="20dp"
                 android:src="@drawable/rename"
                 android:id="@+id/rename" />

            <ImageView
                 android:layout_height="40dp"
                 android:layout_width="40dp"
                 android:src="@drawable/tempel"
                 android:layout_marginEnd="20dp"
                 android:id="@+id/tempel" />

        </LinearLayout>

        <LinearLayout
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:padding="15dp"
             android:orientation="vertical">

            <ScrollView
                 android:layout_height="match_parent"
                 android:layout_width="match_parent">

                <GridLayout
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:orientation="horizontal"
                     android:id="@+id/grid"
                     android:layout_gravity="center_horizontal"
                     android:columnCount="3">

                </GridLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
